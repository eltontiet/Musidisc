{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@config": [
                "config/config.json"
            ],
            "@VideoHandlers/*": [
                "VideoHandlers/*"
            ],
            "@customTypes/*": [
                "types/*"
            ],
            "@tmp": [
                "../tmp"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}